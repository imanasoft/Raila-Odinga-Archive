---
interface NavItem {
  label: string;
  href: string;
}

const { navItems = [] as NavItem[] } = Astro.props;
const navGroups = [
  { heading: 'Discover', items: navItems.slice(0, 5) },
  { heading: 'Engagements', items: navItems.slice(5, 10) },
  { heading: 'Reference', items: navItems.slice(10) }
];
const navId = 'primary-site-nav';
const currentPath = Astro.url.pathname.replace(/\/$/, '') || '/';

const isActive = (href: string) => {
  const normalized = href.replace(/\/$/, '') || '/';
  return normalized === currentPath;
};

const utilityNav = [
  { label: 'Raila Updates', href: '/updates#raila-updates' },
  { label: 'Site Changelog', href: '/updates#site-updates' },
  { label: 'Timeline', href: '/timeline' },
  { label: 'Because Stories Matter', href: '/about' },
  { label: 'ODM Official Site', href: 'https://odm.co.ke', external: true }
] as const;
---
<header class="site-header" role="banner">
  <div class="site-header__utility" aria-label="Archive quick links" data-utility-region>
    <p class="site-header__utility-tagline">A living chronicle of Raila Amolo Odinga.</p>
    <button
      class="site-header__utility-toggle"
      type="button"
      data-utility-toggle
      aria-expanded="false"
      aria-controls="site-utility-nav"
    >
      Quick links
      <span aria-hidden="true" class="site-header__utility-toggle-icon"></span>
    </button>
    <nav
      class="site-header__utility-nav"
      aria-label="Secondary"
      id="site-utility-nav"
      data-utility-nav
      hidden
    >
      <ul>
        {utilityNav.map((item) => (
          <li>
            <a
              href={item.href}
              {...(item.external
                ? { target: '_blank', rel: 'noreferrer noopener', 'data-external': true }
                : {})}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>

  <div class="site-header__inner">
    <a class="site-header__brand" href="/" aria-label="Raila Odinga archive home">
      <span class="site-header__brand-title">Raila Odinga Archive</span>
      <span class="site-header__brand-subtitle">Reference Edition</span>
    </a>

    <button
      class="site-header__menu-button"
      type="button"
      data-nav-toggle
      aria-expanded="false"
      aria-controls={navId}
    >
      <span class="site-header__menu-label">Menu</span>
      <span class="site-header__menu-icon" aria-hidden="true"></span>
    </button>

    <nav class="site-nav" aria-label="Primary" data-site-nav id={navId} aria-hidden="true">
      {navGroups.map((group) => (
        group.items.length > 0 && (
          <div class="site-nav__group">
            <h2 class="site-nav__group-title">{group.heading}</h2>
            <ul class="site-nav__list">
              {group.items.map((item) => (
                <li class="site-nav__item">
                  <a
                    class={`site-nav__link${isActive(item.href) ? ' site-nav__link--active' : ''}`}
                    href={item.href}
                    aria-current={isActive(item.href) ? 'page' : undefined}
                  >
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )
      ))}
    </nav>
    <div class="site-nav__overlay" data-nav-overlay aria-hidden="true"></div>
  </div>
</header>

<script type="module">
  const toggle = document.querySelector('[data-nav-toggle]');
  const nav = document.querySelector('[data-site-nav]');
  const overlay = document.querySelector('[data-nav-overlay]');
  const body = document.body;
  const desktopQuery = window.matchMedia('(min-width: 48rem)');
  const isDesktop = () => desktopQuery.matches;

  const utilityToggle = document.querySelector('[data-utility-toggle]');
  const utilityNav = document.querySelector('[data-utility-nav]');
  const utilityRegion = document.querySelector('[data-utility-region]');

  if (utilityToggle && utilityNav) {
    const setUtilityState = (open) => {
      utilityToggle.setAttribute('aria-expanded', open ? 'true' : 'false');
      utilityNav.toggleAttribute('hidden', !open);
      if (open) {
        utilityNav.dataset.open = 'true';
        utilityRegion?.classList.add('site-header__utility--open');
      } else {
        delete utilityNav.dataset.open;
        utilityRegion?.classList.remove('site-header__utility--open');
      }
    };

    utilityToggle.addEventListener('click', () => {
      const expanded = utilityToggle.getAttribute('aria-expanded') === 'true';
      setUtilityState(!expanded);
    });

    utilityNav.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        setUtilityState(false);
        utilityToggle.focus();
      }
    });

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && utilityNav.dataset.open === 'true') {
        setUtilityState(false);
        utilityToggle.focus();
      }
    });
  }

  if (toggle && nav) {
    const getFocusable = () =>
      Array.from(nav.querySelectorAll('a, button, [tabindex]:not([tabindex="-1"])')).filter(
        (element) => element instanceof HTMLElement
      );

    const setNavState = (open) => {
      const desktop = isDesktop();

      if (desktop) {
        nav.setAttribute('aria-hidden', 'false');
        delete nav.dataset.open;
        body.classList.remove('has-open-nav');
        if (overlay) {
          overlay.classList.remove('site-nav__overlay--visible');
          overlay.setAttribute('aria-hidden', 'true');
          delete overlay.dataset.open;
        }
        return;
      }

      nav.setAttribute('aria-hidden', open ? 'false' : 'true');
      if (open) {
        nav.dataset.open = 'true';
      } else {
        delete nav.dataset.open;
      }

      body.classList.toggle('has-open-nav', open);

      if (!overlay) {
        return;
      }

      if (open) {
        overlay.classList.add('site-nav__overlay--visible');
        overlay.setAttribute('aria-hidden', 'false');
        overlay.dataset.open = 'true';
      } else {
        overlay.classList.remove('site-nav__overlay--visible');
        overlay.setAttribute('aria-hidden', 'true');
        delete overlay.dataset.open;
      }
    };

    const closeNav = () => {
      toggle.setAttribute('aria-expanded', 'false');
      setNavState(false);
    };

    const openNav = () => {
      toggle.setAttribute('aria-expanded', 'true');
      setNavState(true);

      const [firstFocusable] = getFocusable();
      if (firstFocusable) {
        firstFocusable.focus();
      }
    };

    const handleToggle = () => {
      const expanded = toggle.getAttribute('aria-expanded') === 'true';
      if (expanded) {
        closeNav();
      } else {
        openNav();
      }
    };

    toggle.addEventListener('click', () => {
      handleToggle();
    });

    overlay?.addEventListener('click', () => {
      closeNav();
      toggle.focus();
    });

      nav.addEventListener('click', (event) => {
      if (isDesktop()) {
        return;
      }

      if (nav.dataset.open !== 'true') {
        return;
      }

      const target = event.target;
      if (!(target instanceof Element)) {
        return;
      }

      const link = target.closest('a');
      if (!(link instanceof HTMLAnchorElement)) {
        return;
      }

      closeNav();
    });

    nav.addEventListener('click', (event) => {
      if (isDesktop()) {
        return;
      }

      if (nav.dataset.open !== 'true') {
        return;
      }

      const target = event.target;
      if (!(target instanceof Element)) {
        return;
      }

      const link = target.closest('a');
      if (!(link instanceof HTMLAnchorElement)) {
        return;
      }

      closeNav();
    });

    nav.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        closeNav();
        toggle.focus();
        return;
      }

      if (event.key === 'Tab' && nav.dataset.open === 'true') {
        const focusable = getFocusable();
        if (focusable.length === 0) {
          return;
        }

        const first = focusable[0];
        const last = focusable[focusable.length - 1];

        if (!event.shiftKey && document.activeElement === last) {
          event.preventDefault();
          first.focus();
        }

        if (event.shiftKey && document.activeElement === first) {
          event.preventDefault();
          last.focus();
        }
      }
    });

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && nav.dataset.open === 'true') {
        closeNav();
        toggle.focus();
      }
    });

    window.addEventListener('resize', () => {
      if (isDesktop()) {
        toggle.setAttribute('aria-expanded', 'false');
        setNavState(true);
      } else {
        setNavState(false);
        nav.setAttribute('aria-hidden', 'true');
      }
    });

    if (isDesktop()) {
      setNavState(true);
      toggle.setAttribute('aria-expanded', 'false');
      nav.setAttribute('aria-hidden', 'false');
    }
  }
</script>

