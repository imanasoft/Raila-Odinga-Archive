{
  "$id": "https://railasite.org/schemas/person.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Person Record",
  "description": "Biography entry describing individuals within the Raila Odinga knowledge base.",
  "type": "object",
  "required": [
    "id",
    "slug",
    "name",
    "summary",
    "sources"
  ],
  "properties": {
    "id": {
      "$ref": "./common-definitions.schema.json#/$defs/identifier"
    },
    "slug": {
      "$ref": "./common-definitions.schema.json#/$defs/slug"
    },
    "name": {
      "type": "string",
      "description": "Full preferred name for the person."
    },
    "honorific_prefix": {
      "type": "string"
    },
    "honorific_suffix": {
      "type": "string"
    },
    "also_known_as": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "birth": {
      "type": "object",
      "required": [
        "date"
      ],
      "properties": {
        "date": {
          "type": "string",
          "format": "date"
        },
        "place_id": {
          "$ref": "./common-definitions.schema.json#/$defs/identifier"
        },
        "notes": {
          "type": "string"
        },
        "sources": {
          "type": "array",
          "items": {
            "$ref": "./common-definitions.schema.json#/$defs/sourceReference"
          }
        }
      },
      "additionalProperties": false
    },
    "death": {
      "type": "object",
      "required": [
        "status"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "living",
            "deceased"
          ]
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "place_id": {
          "$ref": "./common-definitions.schema.json#/$defs/identifier"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "nationalities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "biography": {
      "$ref": "./common-definitions.schema.json#/$defs/localizedString",
      "description": "Long-form narrative biography supporting editorial layout."
    },
    "summary": {
      "type": "string",
      "description": "Short overview paragraph for cards and listings."
    },
    "timeline_highlights": {
      "type": "array",
      "description": "Primary events to surface within biography timelines.",
      "items": {
        "$ref": "./common-definitions.schema.json#/$defs/linkReference"
      }
    },
    "roles": {
      "type": "array",
      "items": {
        "$ref": "./common-definitions.schema.json#/$defs/linkReference"
      }
    },
    "affiliations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "institution",
          "span"
        ],
        "properties": {
          "institution": {
            "type": "string"
          },
          "credential": {
            "type": "string"
          },
          "span": {
            "$ref": "./common-definitions.schema.json#/$defs/temporalSpan"
          },
          "location_id": {
            "$ref": "./common-definitions.schema.json#/$defs/identifier"
          },
          "sources": {
            "type": "array",
            "items": {
              "$ref": "./common-definitions.schema.json#/$defs/sourceReference"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "family_links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "person_id",
          "relationship_type"
        ],
        "properties": {
          "person_id": {
            "$ref": "./common-definitions.schema.json#/$defs/identifier"
          },
          "relationship_type": {
            "type": "string",
            "enum": [
              "parent",
              "child",
              "spouse",
              "sibling",
              "relative"
            ]
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "./common-definitions.schema.json#/$defs/tag"
      }
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "./common-definitions.schema.json#/$defs/sourceReference"
      }
    },
    "updated_at": {
      "type": "string",
      "format": "date"
    }
  },
  "additionalProperties": false
}