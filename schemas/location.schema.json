{
  "$id": "https://railasite.org/schemas/location.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Location Record",
  "description": "Geographic references used across the archive.",
  "type": "object",
  "required": [
    "id",
    "slug",
    "name",
    "type",
    "sources"
  ],
  "properties": {
    "id": {
      "$ref": "./common-definitions.schema.json#/$defs/identifier"
    },
    "slug": {
      "$ref": "./common-definitions.schema.json#/$defs/slug"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "city",
        "region",
        "country",
        "institution",
        "site"
      ]
    },
    "description": {
      "type": "string"
    },
    "geo": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        "precision": {
          "type": "string",
          "enum": [
            "point",
            "city",
            "region"
          ]
        }
      },
      "required": [
        "latitude",
        "longitude"
      ],
      "additionalProperties": false
    },
    "country_code": {
      "type": "string",
      "pattern": "^[A-Z]{2}$"
    },
    "parent_location": {
      "$ref": "./common-definitions.schema.json#/$defs/linkReference"
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "./common-definitions.schema.json#/$defs/tag"
      }
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "./common-definitions.schema.json#/$defs/sourceReference"
      }
    },
    "updated_at": {
      "type": "string",
      "format": "date"
    }
  },
  "additionalProperties": false
}